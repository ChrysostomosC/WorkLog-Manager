@model List<Employee>

<h1>All Employees</h1>

<p><a href="/Employees/Create" class="create-btn">➕ Create Employee</a></p>

<table class="employee-table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>
                    <a href="/Employees/ShowEmployee/@employee.Id" class="show-btn">Show</a>
                    <a href="/Employees/EditEmployee/@employee.Id" class="edit-btn">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
